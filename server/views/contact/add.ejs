<%- include ../partials/header.ejs %> <%- include ../partials/main_nav.ejs %>

<!-- Content  for the add page -->
<div class="container">
  <div class="row">
    <div class="offset-md-3 col-md-6">
      <h1><%=title %></h1>

      <form class="form" method="post">
        <div class="from-group">
          <label for="nameTextField">Name</label>
          <input
            type="text"
            class="form-control"
            id="nameTextField"
            placeholder="name"
            name="Name"
            required
          />
        </div>

        <div class="from-group">
          <label for="authorTextField">ContactNumber</label>
          <input
            type="text"
            class="form-control"
            id="authorTextField"
            placeholder="contact number"
            name="ContactNumber"
            required
          />
        </div>

        <div class="from-group">
          <label for="publishedTextField">EmailAddress</label>
          <input
            type="text"
            class="form-control"
            id="publishedTextField"
            placeholder="email address"
            name="EmailAddress"
            required
          />
        </div>

        <button class="btn btn-primary" type="submit">
          <i class="fas fa-edit"></i>Submit
        </button>

        <a href="/contact-list" class="btn btn-warning">
          <i class="fas fa-undo"></i>Cancel
        </a>
      </form>
    </div>
  </div>
</div>

<%- include ../partials/bottom_nav.ejs %> <%- include ../partials/footer.ejs %>
